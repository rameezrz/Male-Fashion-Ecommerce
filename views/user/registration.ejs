<section class="h-100 bg-light d-flex flex-column justify-content-between ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="header__logo">
                    <a href="/"><img src="/user/img/logo.png" alt="" style="max-width: 250px;"></a>
                </div>
            </div>
        
            <div class="col-lg-6 col-md-6">
                <div class="header__nav__option">
                    <a href="#"><img src="/user/img/icon/user.svg" alt=""></a>
                    <a href="/user-signin" class="userLogin-p"><p class="userLogin-p">Sign In</p></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-n4">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
                <div class="card card-registration my-2 ">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="./user/img/sign-up-1.jpg" alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6 d-flex align-items-center">
                            <form action="/user-registration" method="post" onsubmit="return validateForm()">
                                <div class="card-body text-black">
                                    <h3 class="mb-4">Create an Account</h3>

                                    <%- include ("../partials/messages") %>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example8" placeholder="Full Name"
                                            class="form-control " name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required/>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example9" placeholder="Email"
                                            class="form-control" name="email" onkeyup="validateEmail()" value="<%= typeof email != 'undefined' ? email : '' %>" required/>
                                        <span id="email-error"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example90" placeholder="Phone"
                                            class="form-control " name="phone" onkeyup="validatePhone()" value="<%= typeof phone != 'undefined' ? phone : '' %>" required/>
                                        <span id="phone-error"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <div class="input-group">
                                          <input type="password" id="form3Example98" class="form-control" placeholder="Password" name="password" onkeyup="validatePassword1()" />
                                          <button class="btn btn-outline-secondary" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="The password is at least 8 characters long, should contain at least one uppercase letter, one lowercase letter, one digit, and one special character">
                                            <i class="fa fa-info-circle"></i>
                                          </button>
                                        </div>
                                        <span id="pass1-error"></span>
                                      </div>
                                      

                                    <div class="form-outline mb-3">
                                        <input type="password" id="form3Example99" class="form-control "
                                            placeholder="Confirm Password" name="password2" onkeyup="validatePassword2()" />
                                        <span id="pass2-error"></span>
                                    </div>

                                    <div class="d-flex flex-column justify-content-center my-2 pt-3">
                                        <button type="submit" class="btn btn-custom btn-lg ms-2">Create
                                            Account</button>
                                        <p class="mt-3 text-center">Already have an account ? <a href="/user-signin"
                                                class="text-dark font-weight-bold">Sign in</a></p>
                                        <span id="submit-error"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer p-0 w-100">
              
        <div class="col-lg-12 text-center">
            <div class="footer__copyright__text">
                <p>Copyright Â© 2023 All rights reserved</p>
            </div>
        </div>
</footer>
</section>

<script src="/user/js/validation.js"></script>