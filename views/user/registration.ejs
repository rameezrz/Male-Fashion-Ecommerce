<!-- fontawesome icons -->
<script src="https://kit.fontawesome.com/d93ba016b2.js" crossorigin="anonymous"></script>


<section class="h-100 bg-light ">
    <div class="container py-3">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
                <div class="card card-registration my-2 ">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="./user/img/sign-up.jpg" alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6 d-flex align-items-center">
                            <form action="/user_registration" method="post" onsubmit="return validateForm()">
                                <div class="card-body text-black">
                                    <h3 class="mb-4">Create an Account</h3>

                                    <%- include ("../partials/messages") %>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example8" placeholder="Full Name"
                                            class="form-control " name="name" />
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example9" placeholder="Email"
                                            class="form-control" name="email" onkeyup="validateEmail()" />
                                        <span id="email-error"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example90" placeholder="Phone"
                                            class="form-control " name="phone" onkeyup="validatePhone()" />
                                        <span id="phone-error"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        
                                        <input type="password" id="form3Example98" class="form-control "
                                            placeholder="Password" name="password" onkeyup="validatePassword1()" />
                                        <span id="pass1-error"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="password" id="form3Example99" class="form-control "
                                            placeholder="Confirm Password" name="password2" onkeyup="validatePassword2()" />
                                        <span id="pass2-error"></span>
                                    </div>

                                    <div class="d-flex flex-column justify-content-center my-2 pt-3">
                                        <button type="submit" class="btn btn-custom btn-lg ms-2">Create
                                            Account</button>
                                        <p class="mt-3 text-center">Already have an account ? <a href="/user_signin"
                                                class="text-dark font-weight-bold">Log in</a></p>
                                        <span id="submit-error"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/user/js/validatin.js"></script>