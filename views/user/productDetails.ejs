<link rel="stylesheet" href="/user/css/modal.css">

<section class="shop-details">
  <div class="product__details__pic">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 d-flex justify-content-start">
          <div class="product__details__breadcrumb">
            <a href="/">Home</a>
            <a href="/shop">Shop</a>
            <span>Product Details</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 col-md-2">
          <ul class="nav nav-tabs" role="tablist">
            <% product.images.forEach(function(image, index) { %>
              <li class="nav-item">
                <a class="nav-link <%= index === 0 ? 'active' : '' %>" data-toggle="tab" href="#tabs-<%= index + 1 %>"
                  role="tab">
                  <div class="product__thumb__pic set-bg" data-setbg="/admin/productImgMulter/<%= image %>">
                  </div>
                </a>
              </li>
              <% }) %>
          </ul>
        </div>
        <div class="col-lg-6 col-md-9">
          <div class="tab-content">
            <% product.images.forEach(function(image, index) { %>
              <div class="tab-pane <%= index === 0 ? 'active' : '' %>" id="tabs-<%= index + 1 %>" role="tabpanel">
                <a href="/admin/productImgMulter/<%= image %>" style="height: 546px;width: 546px;" class="MagicZoom"
                  data-options='{"zoomWidth": 400, "zoomHeight": 400, "cssClass": "mz-show-arrows"}'><img style="height: 546px;"
                    src="/admin/productImgMulter/<%= image %>" alt=""></a>
              </div>
              <% }) %>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 d-flex align-items-center">


          <div class="product__details__text ">
            <h6 style="color: #b19975;font-weight: 800;" class="mb-3">
              <%= product.brand %>
            </h6>
            <h4>
              <%= product.productName %>
            </h4>

            <h3 class="d-inline">₹<%= product.salePrice %>
            </h3>
            <p style="color: #b19975;" class="text-decoration-line-through d-inline">₹<%= product.productPrice %>
            </p>

            <div class="product__details__option">


            </div>
            <div class="product__details__cart__option">
              <a href="" onclick="addToCart('<%= product._id%>'), event.preventDefault()" class="primary-btn">add to cart</a>
              <a href="#" class="text-dark mt-3 d-block"><i class="fa fa-heart"></i> add to wishlist</a>
            </div>

            <div class="product__details__last__option">
              <ul class="mb-5">
                <li><span>SKU:</span>
                  <%= product._id.toString().slice(8, 15) %>
                </li>
                <li><span>Categories:</span>
                  <%= category.name %>
                </li>
              </ul>
              <h5 class="mt-3"><span>Guaranteed Safe Checkout</span></h5>
              <img src="/user/img/shop-details/details-payment.png" alt="">
            </div>
          </div>


        </div>

      </div>
    </div>

  </div>
  <div class="product__details__content">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product__details__tab">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <p class="nav-link active">Description</p>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pan active">
                <div class="product__details__tab__content">
                  <div class="product__details__tab__content__item">
                    <h5>Product Infomation</h5>
                    <p class="mb-5">
                      <%= product.description %>
                    </p>

                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div id="success_tic" class="modal fade" role="dialog">
  <div class="modal-dialog modal-top-right">
      <!-- Modal content-->
      <div class="modal-content">
          <a class="close" href="#" data-dismiss="modal">&times;</a>
          <div class="page-body">
              <div class="head">
                  <h4 style="margin:5px;">Product Added to Cart</h4>
              </div>

              <h1 style="text-align:center;" class="mt-5">
                  <div class="checkmark-circle">
                      <div class="background"></div>
                      <div class="checkmark draw"></div>
                  </div>
              </h1>
          </div>
      </div>
  </div>
</div>



<script>
  // JavaScript code to handle tab switching
  const tabLinks = document.querySelectorAll('.nav-link');
  const tabPanes = document.querySelectorAll('.tab-pane');

  tabLinks.forEach(function (link) {
    link.addEventListener('click', function (e) {
      e.preventDefault();
      const targetTab = document.querySelector(this.getAttribute('href'));
      tabPanes.forEach(function (pane) {
        pane.classList.remove('active');
      });
      targetTab.classList.add('active');
    });
  });

    function addToCart(productId){
        let cartCount = document.getElementById('cartCount')
        $.ajax({
            url:'/add-to-cart',
            data:{productId},
            method:'post',
            success:(response)=>{
                cartCount.innerHTML = response
                $(document).ready(function() {
                    $('#success_tic').modal('show'); // Show the modal

                    setTimeout(function() {
                    $('#success_tic').modal('hide'); // Hide the modal after 5 seconds
                    }, 2000);
                });
            }
        })
    }

</script>