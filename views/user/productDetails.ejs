<section class="shop-details">
  <div class="product__details__pic">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product__details__breadcrumb">
            <a href="./index.html">Home</a>
            <a href="./shop.html">Shop</a>
            <span>Product Details</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-md-3">
          <ul class="nav nav-tabs" role="tablist">
            <% product.images.forEach(function(image, index) { %>
            <li class="nav-item">
              <a class="nav-link <%= index === 0 ? 'active' : '' %>" data-toggle="tab" href="#tabs-<%= index + 1 %>" role="tab">
                <div class="product__thumb__pic set-bg" data-setbg="/admin/productImgMulter/<%= image %>">
                </div>
              </a>
            </li>
            <% }) %>
          </ul>
        </div>
        <div class="col-lg-6 col-md-9">
          <div class="tab-content">
            <% product.images.forEach(function(image, index) { %>
            <div class="tab-pane <%= index === 0 ? 'active' : '' %>" id="tabs-<%= index + 1 %>" role="tabpanel">
                <a href="/admin/productImgMulter/<%= image %>" style="height: 546px;width: 546px;" class="MagicZoom" data-options="zoomWidth:400px; zoomHeight:400px;"><img style="height: 546px;" src="/admin/productImgMulter/<%= image %>" alt="" ></a>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  <div class="product__details__content">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <div class="product__details__text">
              <h6 style="color: #b19975;font-weight: 800;" class="mb-3"><%= product.brand %></h6>
              <h4><%= product.productName  %></h4>

              <h3 class="d-inline">₹<%= product.salePrice  %> </h3>
              <p style="color: #b19975;" class="text-decoration-line-through d-inline">₹<%= product.productPrice  %></p>

              <div class="product__details__option">


              </div>
              <div class="product__details__cart__option">
                <div class="quantity">
                  <div class="pro-qty">
                    <input type="text" value="1">
                  </div>
                </div>
                <a href="#" class="primary-btn">add to cart</a>
                <a href="#" class="text-dark ms-3"><i class="fa fa-heart"></i> add to wishlist</a>
              </div>

              <div class="product__details__last__option">
                <h5><span>Guaranteed Safe Checkout</span></h5>
                <img src="/user/img/shop-details/details-payment.png" alt="">
                <ul>
                  <li><span>SKU:</span> <%= product._id.toString().slice(8, 15) %></li>
                  <li><span>Categories:</span> <%= category.name  %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="product__details__tab">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" >Description</a>
                </li>
              </ul>
              <div class="tab-content">
                <div class="tab-pan active" >
                  <div class="product__details__tab__content">
                    <div class="product__details__tab__content__item">
                      <h5>Product Infomation</h5>
                      <p class="mb-5"><%= product.description  %></p>

                    </div>

                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>



<script>
  // JavaScript code to handle tab switching
  const tabLinks = document.querySelectorAll('.nav-link');
  const tabPanes = document.querySelectorAll('.tab-pane');

  tabLinks.forEach(function(link) {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const targetTab = document.querySelector(this.getAttribute('href'));
      tabPanes.forEach(function(pane) {
        pane.classList.remove('active');
      });
      targetTab.classList.add('active');
    });
  });
</script>

