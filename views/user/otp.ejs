    var countdown = document.getElementById("resendLink");
    
    function startTimer() {
        countdown.innerHTML = timer + "s";
        timer--;
        
        if (timer < 0) {
            countdown.innerHTML = "Resend";
            countdown.href = "/resend-user-otp";
            countdown.classList.remove("disabled");
