<section class="h-100 bg-light ">
    <div class="container py-3">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
                <div class="card card-registration my-2 ">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="./user/img/sign-up.jpg"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6 d-flex align-items-center">
                            <div class="card-body text-black">
                                <h3 class="mb-4">Create an Account</h3>

                                <%- include ("../partials/messages") %>


                                <form action="/user_otp" method="post">
                               
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="form3Example90">OTP</label>
                                    <input type="text" id="form3Example90" placeholder="Enter OTP" class="form-control " name="otp"/>
                                    <p class="text-end"><a href="/resend_user_otp" class="text-dark font-weight-bold">Resend</a></p>
                                </div>

                                



                                <div class="d-flex flex-column justify-content-center my-2 pt-3">
                                    <button type="submit" class="btn btn-custom btn-lg ms-2">Sign In</button>
                                    
                                    
                                </div>

                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>