    }
    
    countdown.onclick = function () {
        if (!countdown.classList.contains("disabled")) {
            countdown.classList.add("disabled");
            countdown.href = "javascript:void(0);";
            timer = 60;
            startTimer();
            var interval = setInterval(startTimer, 1000);
        }
