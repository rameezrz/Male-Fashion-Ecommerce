<section class="h-100 bg-light d-flex align-items-center ">
    <div class="container py-3 ">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
                <div class="card card-registration my-2 ">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="./user/img/sign-up.jpg"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6 d-flex align-items-center justify-content-center">
                            <form action="/user_signin" method="post">
                            <div class="card-body text-black">
                                <h3 class="mb-4">Login to your account</h3>
                                <%- include ("../partials/messages")  %>
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="form3Example9">Email</label>
                                    <input type="text" id="form3Example9" placeholder="balamia@gmail.com"
                                        class="form-control" name="email"/>
                                </div>

                                <div class="form-outline mb-3">
                                    <label class="d-flex justify-content-between" for="form3Example99" id="password-label-1">
                                         Password <span>Forgot ?</span>
                                        <img src="./img/icon/hide.svg" alt="">
                                    </label>
                                    <input type="password" id="form3Example99"
                                        class="form-control " placeholder="*******" name="password"/>
                                </div>

                                



                                <div class="d-flex flex-column justify-content-center my-2 pt-3">
                                    <button type="submit" class="btn btn-custom btn-lg ms-2">Sign In</button>
                                    <p class="mt-3 text-center">Don't have an account ? <a href="/user_registration" class="text-dark font-weight-bold">Sign up</a></p>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>