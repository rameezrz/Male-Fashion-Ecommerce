        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="header__logo">
                    <a href="/"><img src="/user/img/logo.png" alt="" style="max-width: 250px;"></a>
                </div>
            </div>
        
            <div class="col-lg-6 col-md-6">
                <div class="header__nav__option">
                    <a href="#"><img src="/user/img/icon/user.svg" alt=""></a>
                    <a href="/user-registration" class="userLogin-p"><p class="userLogin-p">Register</p></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-n5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col">
                <div class="card card-registration my-2 ">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="./user/img/sign-up-2.jpg"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6 d-flex align-items-center justify-content-center">
                            <form action="/user-signin" method="post">
                            <div class="card-body text-black">
                                <h3 class="mb-4">Login to your account</h3>
                                <%- include ("../partials/messages")  %>
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="form3Example9">Email</label>
                                    <input type="email" id="form3Example9" placeholder="balamia@gmail.com"
                                        class="form-control" name="email" required/>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="d-flex justify-content-between" for="form3Example99" id="password-label-1">
                                         Password <span>Forgot Password?</span>
                                    </label>
                                    <input type="password" id="form3Example99"
                                        class="form-control " placeholder="*******" name="password" required/>
                                </div>
                                <div class="d-flex flex-column justify-content-center my-2 pt-3">
                                    <button type="submit" class="btn btn-custom btn-lg ms-2">Sign In</button>
                                    <p class="mt-3 text-center">Login using OTP ? <a href="/otp-login" class="text-dark font-weight-bold">Sign in</a></p>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
