<%- include ('../partials/adminHeader') %>

<div class="home-content">
    <div class="container px-4">
        <div class="row gx-5">
          <div class="col mt-3">
            <%- include('../partials/messages') %>
            <form class="form" action="/admin_panel/add_category" method="post">
              <div class="form-group sm-3 mb-2">
                <label for="inputPassword2" class="">Add Category</label>
                <input type="text" class="form-control" id="category" name="category" placeholder="Clothing">
              </div>
              <button type="submit" class="btn btn-primary mb-5">Add</button>
            </form>
            
          </div>
          <div class="col bg-light mx-4">
            <h5 class="text-center mb-3">Available Categories</h5>
            <table class="table bg-white rounded shadow-sm  table-hover table-striped ">
              <thead>
                <tr>
                  <th scope="col" width="50">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">CreatedAt</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach((category,index) => { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= category.name %></td>
                  <td><%= category.createdAt.toLocaleString() %></td>
                </tr>
                <%  }); %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row gx-5">
            <div class="col">
            <form class="mt-5" action="/admin_panel/add_subCategory" method="post">
                <div class="form-group sm-3 mb-2">
                    <label for="inputPassword2" class="">Add Sub-Category</label>
                    <input type="text" class="form-control" id="subCategory" name="subCategory" placeholder="Shirt">
                  </div>
                <div class="form-group">
                  <label class="d-block" for="exampleFormControlSelect1">Choose Category</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="category">
                    <% categories.forEach((category)=>{ %>
                        <option value="<%=category._id  %>"> <%= category.name %></option>
                    <% }); %>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary ms-2 mt-n2">Add</button>
            </form>
        </div>
        <div class="col bg-light mt-5 mx-4">
            <h5 class="text-center mb-3">Available Sub-Categories</h5>
            <table class="table bg-white rounded shadow-sm  table-hover table-striped ">
              <thead>
                <tr>
                  <th scope="col" width="50">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                </tr>
              </thead>
              <tbody>
                <% subCategories.forEach((subCategory,index) => { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= subCategory.name %></td>
                  <td><%= subCategory.category %></td>
                </tr>
                <%  }); %>
              </tbody>
            </table>
        </div>
        </div>
      </div>


</div>

