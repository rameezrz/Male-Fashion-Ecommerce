<%- include ('../partials/adminHeader')  %>

<div class="home-content">
  <div class="col">
    <table class="table bg-white rounded shadow-sm  table-hover table-striped">
      <thead>
        <tr>
          <th scope="col" width="50">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user,index) => { %>
          <tr>
          <td><%= index+1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <% if(user.isBlocked){ %>
            <td><a href="/admin_panel/unblock_user/<%= user._id %>" class="btn btn-success">Unblock</a></td>
            <% }else{ %>
              <td><a href="/admin_panel/block_user/<%= user._id %>" class="btn btn-danger">Block</a></td>
            <% } %>
        </tr>
      <%  }); %>
      </tbody>
    </table>
  </div>
</div>